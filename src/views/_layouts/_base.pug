include ./../_mixins/_title.pug
include ./../_mixins/_metaTags.pug

- var $templateName = ''
- var $templateClass = ''

block vars

doctype
html(lang='pt-BR')
  head

    +metaTags()
    +title('Home')
    
    link(rel='shortcut icon' href='assets/img/favicon.ico' type='image/x-icon')

    //- Styles
    block styles
      link(href='assets/css/common/merlins_potions-common-globals.css' rel='stylesheet' media='all')
      link(href='assets/css/merlins_potions-general.css' rel='stylesheet' media='all')

  body
    //- Overlay
    div(class='x-overlay')

    //- Header
    include ./../_common/_header.pug
    include ./../_common/_navbar.pug

    //- Main Content
    main(class=`x-${$templateClass}__main`)
      block content

    //- Footer
    include ./../_common/_footer.pug

    //- Scripts
    block scripts
    
      script(src='https://code.jquery.com/jquery-3.3.1.min.js')
      script(src='https://www.gstatic.com/firebasejs/5.4.2/firebase-app.js')
      script(src='https://www.gstatic.com/firebasejs/5.4.2/firebase-firestore.js')

      script(src='assets/js/common/merlins_potions-common-globals.js')